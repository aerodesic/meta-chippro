 CONFIG_UBI_SIZE
@@ -5012,6 +5017,7 @@ CONFIG_USE_NOR
 CONFIG_USE_ONENAND_BOARD_INIT
 CONFIG_USE_SPIFLASH
 CONFIG_USE_STDINT
+CONFIG_USE_UBI_BOOT_ZIMAGE
